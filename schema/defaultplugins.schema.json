{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "defaultplugins",
  "description": "Defines whether plugins should be added as default",
  "$merge": {
    "type": "merge",
    "source": { "$ref": "contentplugin" },
    "with": {
      "properties": {
        "isAddedByDefault": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
